<div data-hook="admin_image_form_fields">
  <div class="row">
    <div class="col-xs-3">
      <div data-hook="file" class="field">
        <%= f.label :attachment %><br>
        <%= f.file_field :attachment %>
      </div>
      <div data-hook="variant" class="field">
        <%= f.label :viewable_id, Spree::Variant.model_name.human %><br>
        <% if @product.has_variants? %>
          <%= f.hidden_field :viewable_id, value: @product.master.id %>
          <%= f.select :viewable_ids, options_for_select(@variants, @image.variant_ids.present? ? @image.variant_ids : @variants.first[1]), {}, { multiple: true, :class => 'select2 fullwidth', required: true } %>
        <% else %>
          <%= f.select :viewable_id, @variants, {}, { class: 'select2 fullwidth' } %>
        <% end %>
      </div>
    </div>
    <div data-hook="alt_text" class="field col-xs-4">
      <%= f.label :alt %><br>
      <%= f.text_area :alt, rows: 4, class: 'fullwidth' %>
    </div>
  </div>
</div>

<div class="clear"></div>
